{
	"compilerOptions": {
		"target": "es2018",
		"lib": [
			"es2018"
		],
		"module": "commonjs",
		"outDir": "./out",
		"typeRoots": [
			"./node_modules/@types"
		],
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*"
	]
}
